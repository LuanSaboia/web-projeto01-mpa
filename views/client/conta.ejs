<%- include('../template/header-nav'); %>

  <div class="login-card" style="flex-direction:row-reverse">
    <div class="login-image">
      <img src="https://www.capcenter.com/account/static/media/Security.93977d2cb88c37ad8e54e961e54cef5f.svg" alt="Imagem de Login">
    </div>
    <div class="login-form">
      <h2>Conta</h2>
      <form action="/signup" method="POST">
        <div class="form-group">
          <label for="nome-completo">Nome Completo</label>
          <input type="text" id="nome-completo" name="nome" placeholder="Digite seu nome completo" value="<%= user.nome %>" readonly style="background: #e9e9e9;">
        </div>
        <div class="form-group">
          <label for="data-nascimento">Data de Nascimento</label>
          <input type="date" id="data-nascimento" name="dtNascimento" value="<%= user.dtNascimento %>" readonly style="background: #e9e9e9;">
        </div>
        <div class="form-group">
          <label for="genero">GÃªnero</label>
          <select id="genero" name="genero" readonly style="background: #e9e9e9;">
            <option value="">Selecione</option>
            <option value="masculino" <% if (user.genero === 'masculino') { %>selected<% } %>>Masculino</option>
            <option value="feminino" <% if (user.genero === 'feminino') { %>selected<% } %>>Feminino</option>
            <option value="outro" <% if (user.genero === 'outro') { %>selected<% } %>>Outro</option>
          </select>
        </div>
        <div class="form-group">
          <label for="telefone">Telefone</label>
          <input type="tel" id="telefone" name="telefone" placeholder="Digite seu telefone" value="<%= user.telefone %>" readonly style="background: #e9e9e9;">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Digite seu email" value="<%= user.email %>" readonly style="background: #e9e9e9;"> <br><br>
          <a href="/loja/conta-editar/<%= user._id %>" class="btn btn-primary">Editar conta</a>
          <a href="/loja/conta-senha/<%= user._id %>" class="btn btn-danger">Alterar senha</a>
        </div>
      </form>
    </div>
  </div> 
  

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
  </body>
</html>
