<%- include('../../template/header-nav'); %>

<div class="login-card" style="flex-direction:row-reverse">
    <div class="login-image">
      <img src="caminho/para/imagem.jpg" alt="Imagem de Login">
    </div>
    <div class="login-form">
      <form action="/admin/loja/editar-carro/<%= cars._id %>" method="POST">
        <div class="form-group">
            <label for="foto">Foto</label>
            <input type="text" id="foto" name="foto" placeholder="Insira a url da foto" value="<%= cars.foto %>" required>
        </div>
        <div class="form-group">
          <label for="nome">Nome</label>
          <input type="text" id="nome" name="nome" placeholder="Digite o nome do carro" value="<%= cars.nome %>" required>
        </div>
        <div class="form-group">
          <label for="marca">Marca</label>
          <input type="text" id="marca" name="marca" placeholder="Digite a marca do carro" value="<%= cars.marca %>" required>
        </div>
        <div class="form-group">
          <label for="cor">Cor</label>
          <input type="text" id="cor" name="cor" placeholder="Digite a cor do carro" value="<%= cars.cor %>" required>
        </div>
        <div class="form-group">
            <label for="status">Disponibilidade</label>
            <select id="status" name="status" required>
              <option value="" >Selecione</option>
              <option value="disponivel" <% if (cars.status === 'disponivel') { %>selected<% } %>>Disponível</option>
              <option value="indisponivel" <% if (cars.status === 'indisponivel') { %>selected<% } %>>Indiponível</option>
            </select>
        </div>
        <div class="form-group">
          <label for="valor">Valor</label>
          <input type="text" id="valor" name="valor" placeholder="Digite o valor do carro" value="<%= cars.valor %>" required>
        </div>
        <div class="form-group">
          <label for="preco-diaria">Preço da Diária</label>
          <input type="text" id="preco-diaria" name="precoDiaria" placeholder="Digite o preço da diária" value="<%= cars.precoDiaria %>" required><br>
          <button type="submit">Salvar</button>
        </div>
      </form>
    </div>
  </div>
  

    </body>
</html>